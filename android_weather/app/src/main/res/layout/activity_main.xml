<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/ifconnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="current_temperature"/>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ifcloud"
                android:layout_width="200px"
                android:layout_height="200px"
                android:orientation="horizontal"
                app:srcCompat="@drawable/raining" />

            <TextView
                android:orientation="horizontal"
                android:id="@+id/current_weather_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="14 °C / 39 °F"/>

        </LinearLayout>


        <Button
            android:id="@+id/get_current_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get current weather" />
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dyanamic_created_clound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/next5dayscloud"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:orientation="horizontal"
                android:id="@+id/next5daysweather_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="test"/>

        </LinearLayout>


        <Button
            android:id="@+id/Next_5days_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Next 5 days weather" />
        <TextView
            android:id="@+id/stddev_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="stddev"/>

        <Button
            android:id="@+id/displayStddev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate stddev" />

    </LinearLayout>
</ScrollView>